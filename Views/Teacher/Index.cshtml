@model IEnumerable<SchoolManagementSystem.ViewModel.TeacherViewModel>

<h2>Teachers</h2>

<a href="@Url.Action("Create", "Teacher")" class="btn btn-primary">Create New Teacher</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Sex</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var teacher in Model)
        {
            <tr>
                <td>@teacher.Name</td>
                <td>@teacher.Age</td>
                <td>@teacher.Sex</td>
                <td>
                    @if (!string.IsNullOrEmpty(teacher.Image))
                    {
                        <img src="@teacher.Image" alt="Student Image" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
